
@{
    ViewData["Title"] = "View";
}

<div class="container p-3"> @* p-3 = padding: 3px *@
    <div class="row pt-4">
        @* Dividing the main div in 2 parts *@
        <div class="col-6">
            <h2 class="text-primary">Company List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Company
            </a>
        </div>
    </div>
    <br />


<table id="companyTbl" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>City</th>
            <th>state</th>
            <th>Phone Number</th>
            <th></th>
        </tr>
    </thead>
</table>

</div>

@section Scripts {
    <script src="~/js/company.js"></script>
}