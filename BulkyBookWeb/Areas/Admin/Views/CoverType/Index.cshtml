@model IEnumerable<CoverType> // To get from de controller the value passed in the View() return
@{
    ViewData["Title"] = "View";
}

<div class="container p-3"> @* p-3 = padding: 3px *@
    <div class="row pt-4">
        @* Dividing the main div in 2 parts *@
        <div class="col-6">
            <h2 class="text-primary">Cover Type List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Cover
            </a>
        </div>
    </div>
    <br />


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)  // In here the Model should be uppercase
        {
            <tr>
                <td>@obj.Name</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-area="Admin" asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                        <a asp-area="Admin" asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>